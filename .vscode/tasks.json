{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Nextest: Run All Tests",
            "type": "shell",
            "command": "cargo",
            "args": [
                "nextest",
                "run"
            ],
            "group": "test",
            "problemMatcher": [
                "$rustc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Nextest: Run Single Test",
            "type": "shell",
            "command": "cargo",
            "args": [
                "nextest",
                "run",
                "--filter",
                "${input:testName}"
            ],
            "group": "test",
            "problemMatcher": [
                "$rustc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "type": "cargo",
            "command": "build",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build",
            "label": "rust: cargo build"
        }
    ],
    "inputs": [
        {
            "id": "testName",
            "type": "promptString",
            "description": "请输入要运行的单个测试名称"
        }
    ]
}
