{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Nextest (all)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/{{project-name}}",
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Nextest: Run All Tests"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable",
            "cargo": {
                "args": [
                    "build",
                    "--bin",
                    "{{project-name}}"
                ],
                "filter": {
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}
